  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2015",
    "rootDir": "src",

    // extended tsconfig.json
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": false,
    "resolveJsonModule": false,
    "sourceMap": false
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts"]
}
